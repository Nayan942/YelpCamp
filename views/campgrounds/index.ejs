<%include ../partials/header%>

    <div class="container">
            <header class="jumbotron">
                <div class="container">
                    <h1>Welcome To YelpCamp!</h1>
                    <p>
                        <a class="btn btn-primary btn-lg" href="/campgrounds/new">Add New Campground</a>
                    </p>
                </div>
            </header>
            
            
            <div class="row text-center"  style="display:flex; flex-wrap:wrap">  
            
                    <!--badha aada avara na thai jay aetle -->
            
                    <% campgrounds.forEach(camp=>{%>
                        <div class="col-md-3 col-sm-6">
                            <div class="thumbnail">
                                <img style="width:100%" src="<%=camp.image%>">
                                <div class="caption">
                                    <h4><%=camp.name%></h4>
                                </div>
                                <p>
                                    <a class="btn btn-primary" href="/campgrounds/<%=camp._id%>">More Info</a>
                                </p>
                            </div>
                        </div>    
                    <%})%>
            </div>
    </div>
<%include ../partials/footer%>